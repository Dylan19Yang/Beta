<Window x:Class="Beta.View.DetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DetailWindow" Height="300" Width="300">
    <Grid Background="#FFEBEBEB">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label  Grid.Row="0" Content="Title"/>
        <TextBox x:Name="textTitle" Grid.Row="1" BorderBrush="#FFEBEBEA" BorderThickness="10,5"/>
        <Label  Grid.Row="2" Content="ActionWord"/>
        <TextBox x:Name="textActionWord" Grid.Row="3" BorderBrush="#FFEBEBEA" BorderThickness="10,5"/>
        <Label  Grid.Row="4" Content="URL"/>
        <TextBox x:Name="textURL" Grid.Row="5" BorderBrush="#FFEBEBEA" BorderThickness="10,5"/>
        <StackPanel Grid.Row="6" Orientation="Horizontal">
            <Button Width="70" Height="30" Content="Cancel" PreviewMouseLeftButtonUp="buttonCancelMouseUp"/>
            <Button Width="70" Height="30" Content="OK" PreviewMouseLeftButtonUp="buttonOkMouseUp"/>
        </StackPanel>
    </Grid>
</Window>
