<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:View="clr-namespace:Beta.View" x:Class="Beta.MainWindow"
        Title="Beta" WindowStyle="None" ResizeMode="NoResize" Topmost="True" SizeToContent="Height" AllowDrop="True" ShowInTaskbar="False" FocusManager.FocusedElement="{Binding ElementName=inputTextBox}">
    <Border BorderBrush="Black" BorderThickness="5" MouseDown="Border_OnMouseDown">
        <StackPanel Orientation="Vertical">
            <TextBox x:Name="inputTextBox" TextWrapping="Wrap" Margin="0" TextChanged="InputTextBox_OnTextChanged" PreviewKeyDown="InputTextBox_OnPreviewKeyDown"/>
            <View:ResultListView x:Name="resultListBox"/>
        </StackPanel>
    </Border>
</Window>
